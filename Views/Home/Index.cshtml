@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 >Bienvenido a Cinarg</h1>
    <p>No somos gringos.</p>
</div>
<section id="gallery">
@foreach(Series serie in ViewBag.Series)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <img src="@serie.ImagenSerie" alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title" id= "nombreS">@serie.Nombre</h5>
                        <button type="button" onclick="masInformacion(@serie.IdSerie)" data-bs-toggle="modal" data-bs-target="#informacion" class="btn btn-outline-success btn-sm">Mas informacion</button>
                        <button type="button" onclick="Temporadas(@serie.IdSerie)" data-bs-toggle="modal" data-bs-target="#informacion"  class="btn btn-outline-success btn-sm">Mas temporadas</button>
                        <button type="button" onclick="Actores(@serie.IdSerie)" data-bs-toggle="modal" data-bs-target="#informacion" class="btn btn-outline-success btn-sm">Actores</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
</section>
<div class="modal fade" id="informacion" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="modalTittle"></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="texto_informacion" class="modal-body">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
  </div>




